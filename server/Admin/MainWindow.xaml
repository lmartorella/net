<Window x:Class="Lucky.Home.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:home="clr-namespace:Lucky.Home"
        Title="Admin UI" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding Connection.StatusText}" />

        <TabControl Grid.Row="1">
            <TabItem Header="Topological View">
                <home:TopologicalView Nodes="{Binding Connection.Nodes}"/>
            </TabItem>
            <TabItem Header="Devices">
                <home:DeviceView Devices="{Binding Connection.Devices}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
